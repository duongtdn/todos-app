<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.todostogether" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TodosTogether</name>
    <description>
        A collaborative Todo Application
    </description>
    <author email="duongtdn@stormgle.com" href="http://stormgle.com">
        Stormgle's Eagle Squad
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- APP ICON
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/app-icon/android/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="res/app-icon/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/app-icon/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/app-icon/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/app-icon/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/app-icon/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
        
        <!-- Splash Screen -->

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-60x60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-60x60@1x.png" width="60" height="60" />
        <icon src="res/app-icon/ios/AppIcon/Icon-App-60x60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="res/app-icon/ios/AppIcon/Icon-App-76x76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="res/app-icon/ios/AppIcon/Icon-App-40x40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-57x57@1x.png" width="57" height="57" />
        <icon src="res/app-icon/ios/AppIcon/Icon-App-57x57@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-72x72@1x.png" width="72" height="72" />
        <icon src="res/app-icon/ios/AppIcon/Icon-App-72x72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="res/app-icon/ios/AppIcon/Icon-App-29x29@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/app-icon/ios/AppIcon/Icon-Small-50x50@1x.png" width="50" height="50" />
        <icon src="res/app-icon/ios/AppIcon/Icon-Small-50x50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/app-icon/ios/AppIcon/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        
        <!-- Splash Screen -->

    </platform>
    <engine name="browser" spec="~4.1.0" />
    <plugin name="com.admob.plugin" spec="~5.5.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
    
</widget>
